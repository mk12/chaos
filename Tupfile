CC = clang
OPTIONS = -std=c11 -Os
WARNINGS = -Weverything -pedantic
NOWARNINGS = -Wno-padded -Wno-vla
COMPILE = $(CC) $(OPTIONS) $(WARNINGS) $(NOWARNINGS) -c
LINK = $(CC) -lpthread

: foreach src/*.c |> ^ CC %f^ $(COMPILE) %f -o %o |> build/%B.o
: build/*.o |> ^ Linking binary "chaos"^ $(LINK) %f -o %o |> bin/chaos
